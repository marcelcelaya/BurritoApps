@model IEnumerable<Burritos1.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}
@{  if (TempData["Message"] != null)
    {
        switch ((string)TempData["Message"])
        {
            case "UsuarioNuevoRol":
                <div class="alert alert-success" role="alert">
                     El Rol ha sido correctamente agregado al usuario!
                </div>
                break;
            case "UsuarioRolExistente":
                <div class="alert alert-danger" role="alert">
                    El usuario ya tenia este rol!
                </div>
                break;
        }
    }
}
<h2>Lista de usuarios</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
           Intentos
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles/Roles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
