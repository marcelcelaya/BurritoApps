@{

    if (this.User.IsInRole("Administrador"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        if (this.User.IsInRole("Vendedor"))
        {
            Layout = "~/Views/Shared/_VendorLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }

}
